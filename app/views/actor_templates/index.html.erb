<h1>
  List of all actors
</h1>

<form action = "/insert_actor"  method = "post">
  <div>
  <label for = "actor_field">Name</label>
  <input id = "actor_field" type ="text" name ="the_actor">
  </div><div>
  <label for = "dob_field">DOB</label>
  <input id = "dob_field" type ="text" name ="the_dob">
  </div><div>
  <label for = "bio_field">Bio</label>
  <input id = "bio_field" type ="text" name ="the_bio">
  </div><div>
  <label for = "image_field">Image</label>
  <input id = "image_field" type ="text" name ="the_image">
  </div><div>

  <button type="submit">Create actor</button>
</form>


<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      DOB
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
