<h1>
  List of all directors
</h1>

<form action = "/insert_director"  method = "post">
  <div>
  <label for = "director_field">Name</label>
  <input id = "director_field" type ="text" name ="the_director">
  </div><div>
  <label for = "dob_field">DOB</label>
  <input id = "dob_field" type ="text" name ="the_dob">
  </div><div>
  <label for = "bio_field">Bio</label>
  <input id = "bio_field" type ="text" name ="the_bio">
  </div><div>
  <label for = "image_field">Image</label>
  <input id = "image_field" type ="text" name ="the_image">
  </div><div>

  <button type="submit">Create director</button>
</form>


<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      DOB
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |an_director| %>
  <tr>
    <td>
      <%= an_director.id %>
    </td>

    <td>
      <img src="<%= an_director.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_director.name %>
    </td>

    <td>
      <%= an_director.dob %>
    </td>

    <td>
      <a href="/directors/<%= an_director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
